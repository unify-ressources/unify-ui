---
import UiLink from "@components/atoms/UiLink.astro";
type Props = {
  href: string;
  text: string;
}

const { href, text } = Astro.props;

const isNotExternal = (href: string) =>
  href.startsWith("/") || href.startsWith("#");
---

<UiLink href={href} class="btn btn-xs bg-gray100 dark-bg-gray900 b b-border-high/40 hover-b-border-higher text-fg gap-x1 rd-lg">
  {text}
  {
    isNotExternal(href) ? null : (
      <span aria-hidden="true" class="flex i-ph-arrow-square-out text-xs" />
    )
  }
</UiLink>
