---
type Props = {
    col: "1-2" | "1-2-3" | "2-4" | "1-2-4";
    gap?: number;
}

const { col, gap } = Astro.props;
---

<div
    class:list={[
        "grid mt4 first-mt0",
        {
            "sm-grid-cols-2": col === "1-2",
            "sm-grid-cols-2 lg-grid-cols-3": col === "1-2-3",
            "grid-cols-2 md-grid-cols-4": col === "2-4",
            "sm-grid-cols-2 md-grid-cols-4": col === "1-2-4",
            gap1: gap === 1,
            gap2: gap === 2,
            gap3: gap === 3,
            gap4: gap === 4,
            gap5: gap === 5,
            gap6: gap === 6,
        },
    ]}
>
    <slot />
</div>
