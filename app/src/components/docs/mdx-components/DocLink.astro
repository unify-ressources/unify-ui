---
import UiLink from "@components/atoms/UiLink.astro";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">
const { href } = Astro.props;
const href_ = href as string;
const isInternalLink =
  (href_ && href_.startsWith("/")) || (href_ && href_.startsWith("#"));
---

<UiLink
  href={href_}
  class={"wmax underline underline-dashed whitespace-normal underline-1 break-words text-primary700 dark-text-primary500 rd-lg ease-linear duration-200 hover-text-primary800 dark-hover-text-primary300"}
>
  <slot />
  {
    isInternalLink?null:<span aria-hidden="true" class="i-ph-arrow-up-right text-sm"/>
  }
</UiLink>
