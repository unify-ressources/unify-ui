---
import Button from "./Button.astro";
---

<div>
    <div class="grid grid-cols-[auto_minmax(0,1fr)] gap-4 overflow-hidden">
        <div class="grid text-sm text-sub-body mt14 pl3 sm-pl0">
            <div>Primary</div>
            <div>Secondry</div>
            <div>Accent</div>
            <div>Success</div>
            <div>Info</div>
            <div>Warning</div>
            <div>Danger</div>
            <div>Gray</div>
            <div>Neutral</div>
            <div>White</div>
